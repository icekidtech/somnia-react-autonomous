{
  "name": "@somnia-react/autonomous-sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for deploying and managing Somnia reactive handlers",
  "license": "MIT",
  "author": "Icekid",
  "homepage": "https://github.com/icekidtech/somnia-react-autonomous#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/icekidtech/somnia-react-autonomous.git",
    "directory": "packages/sdk"
  },
  "bugs": {
    "url": "https://github.com/icekidtech/somnia-react-autonomous/issues"
  },
  "keywords": [
    "somnia",
    "reactive",
    "handlers",
    "ethereum",
    "defi",
    "automation",
    "sdk",
    "typescript"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./deployment": {
      "import": "./dist/deployment.mjs",
      "require": "./dist/deployment.js",
      "types": "./dist/deployment.d.ts"
    },
    "./subscriptions": {
      "import": "./dist/subscriptions.mjs",
      "require": "./dist/subscriptions.js",
      "types": "./dist/subscriptions.d.ts"
    },
    "./decoders": {
      "import": "./dist/decoders.mjs",
      "require": "./dist/decoders.js",
      "types": "./dist/decoders.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "type-check": "tsc --noEmit"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "ethers": "^6.9.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitest/coverage-v8": "^1.1.0",
    "abitype": "^1.0.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "tsup": "^8.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "peerDependencies": {
    "@somnia-react/autonomous-contracts": "^0.1.0"
  }
}
